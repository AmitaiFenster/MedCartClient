<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amitai.medcart.medcartclient">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <!--//TODO: remove if not needed. If using nfc foreground detection or opening already running activities and adding the nfc intent to a list, than use this in the activity label:-->
    <!--android:alwaysRetainTaskState="true"-->
    <!--android:launchMode="singleInstance"-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_unlock1"
        android:label="@string/app_name2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_list" />

        </activity>
    </application>

</manifest>
